{
	"title": "Game Data",
	"type": "object",
	"properties": {
		"id": {
			"title": "Game ID",
			"type": "string",
			"minimum": 1
		},
		"localization": {
			"title": "Array of Language",
			"type": "array",
			"minItems": 1,
			"items": {
				"title": "Language",
				"type": "string"
			}
		},
		"monsters": {
			"title": "Array of Monster",
			"type": "array",
			"minItems": 1,
			"items": {
				"title": "Monster",
				"type": "object",
				"properties": {
					"id": {
						"title": "Monster ID",
						"type": "string",
						"minLength": 1
					},
					"type": {
						"$ref": "types.schema.json#/$defs/type"
					},
					"linked_id": {
						"title": "Related Monster ID",
						"type": "string",
						"minLength": 1
					},
					"linked_index": {
						"title": "Related Monster Index",
						"type": "number",
						"minimum": 1,
						"maximum": 127,
						"default": 1
					},
					"weakness": {
						"oneOf": [
							{
								"$ref": "#/$defs/weakness"
							},
							{
								"title": "Multiple Weakness",
								"type": "object",
								"minItems": 1,
								"items": {
									"$ref": "#/$defs/weakness"
								},
								"propertyNames": {
									"$ref": "states.schema.json#/$defs/state"
								}
							}
						]
					}
				},
				"required": [
					"id",
					"type"
				],
				"additionalProperties": false
			}
		}
	},
	"required": [
		"id",
		"localization",
		"monsters"
	],
	"additionalProperties": false,
	"$defs": {
		"weakness": {
			"title": "Weakness",
			"type": "string",
			"minLength": 5,
			"maxLength": 5,
			"pattern": "^(F|f|_)(W|w|_)(T|t|_)(I|i|_)(D|d|_)$"
		}
	}
}
